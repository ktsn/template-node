{
  "name": "template-node",
  "version": "1.0.0",
  "private": true,
  "description": "A project template for Node.js libraries",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ktsn/template-node.git"
  },
  "keywords": [
    "node.js",
    "template"
  ],
  "author": "katashin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ktsn/template-node/issues"
  },
  "homepage": "https://github.com/ktsn/template-node#readme",
  "jest": {
    "transform": {},
    "testRegex": "/test/.+\\.spec\\.js$"
  },
  "scripts": {
    "lint": "eslint lib test && prettier -l \"{lib,test}/**/*.js\"",
    "format": "prettier --write \"{lib,test}/**/*.js\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run lint && npm run test"
  },
  "devDependencies": {
    "eslint": "^3.12.2",
    "eslint-config-ktsn": "^1.0.0",
    "eslint-config-prettier": "^2.9.0",
    "jest": "^22.4.3",
    "prettier": "1.11.1"
  }
}
