{
  "name": "template-node",
  "version": "1.0.0",
  "private": true,
  "description": "A project template for Node.js libraries",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ktsn/template-node.git"
  },
  "keywords": [
    "node.js",
    "template"
  ],
  "author": "katashin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ktsn/template-node/issues"
  },
  "homepage": "https://github.com/ktsn/template-node#readme",
  "scripts": {
    "lint": "eslint lib test && prettier -l \"{lib,test}/**/*.js\"",
    "format": "prettier --write \"{lib,test}/**/*.js\"",
    "test": "npm run lint && jasmine JASMINE_CONFIG_PATH=test/jasmine.json",
    "prepublish": "npm run test"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-register": "^6.18.0",
    "eslint": "^3.12.2",
    "eslint-config-ktsn": "^1.0.0",
    "eslint-config-prettier": "^2.9.0",
    "jasmine": "^2.5.2",
    "prettier": "1.11.1"
  }
}
